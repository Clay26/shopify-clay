<h1><%= link_to "Product Page", products_path %></h1>
<h2><%= @product.name %></h2>

<ul>
    <li>
        <span>Price: </span>
        <span><%= number_with_precision(@product.price, precision: 2) %></span>
    </li>
    <li>
        <span>Description: </span>
        <span><%= @product.description %></span>
    </li>
</ul>

<h2>Reviews</h2>
<%= render @product.reviews %>

<h2>Add a Review</h2>
<%= render 'reviews/form' %>

<ul>
    <li><%= link_to "Edit", edit_product_path(@product) %></li>
    <li><%= link_to "Destroy", product_path(@product), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
                } %></li>
</ul>